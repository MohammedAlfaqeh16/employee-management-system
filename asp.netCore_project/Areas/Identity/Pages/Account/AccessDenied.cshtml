@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center align-items-center min-vh-60">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white rounded-4 shadow-lg p-5 text-center border border-danger">
                <h1 class="display-5 mb-3 text-danger fw-bold">
                    <i class="bi bi-shield-lock-fill me-2"></i>
                    @ViewData["Title"]
                </h1>
                <p class="lead mb-4 text-danger">
                    You do not have access to this resource.
                </p>
                <a href="javascript:history.back()" class="btn btn-outline-danger btn-lg rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle"></i> Go Back
                </a>
            </div>
        </div>
    </div>
</div>