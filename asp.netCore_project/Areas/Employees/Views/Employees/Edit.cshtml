@model asp.netCore_project.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Employee</h4>
                </div>
                <div class="card-body bg-light rounded-bottom-4">
                    <form asp-action="Edit" autocomplete="off"  id="editForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="EmployeeName" class="form-label fw-bold">Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="EmployeeName" class="form-control" placeholder="Enter employee name" />
                            </div>
                            <span asp-validation-for="EmployeeName" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EmployeePhone" class="form-label fw-bold">Phone</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input asp-for="EmployeePhone" class="form-control" placeholder="Enter phone number" />
                            </div>
                            <span asp-validation-for="EmployeePhone" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EmployeeEmail" class="form-label fw-bold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="EmployeeEmail" class="form-control" placeholder="Enter email" />
                            </div>
                            <span asp-validation-for="EmployeeEmail" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EmployeeAge" class="form-label fw-bold">Age</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                <input asp-for="EmployeeAge" class="form-control" placeholder="Enter age" />
                            </div>
                            <span asp-validation-for="EmployeeAge" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EmployeeSalary" class="form-label fw-bold">Salary</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                <input asp-for="EmployeeSalary" class="form-control" placeholder="Enter salary" />
                            </div>
                            <span asp-validation-for="EmployeeSalary" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">
                                <i class="bi bi-pencil-square"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('editForm').addEventListener('submit', function (e) {
            e.preventDefault();
            if (confirm('Are you sure you want to save changes to this employee?')) {
                toastr.success('Employee updated successfully!');
                setTimeout(() => {
                    e.target.submit();
                }, 800);
            } else {
                toastr.info('Edit cancelled.');
            }
        });
    </script>
}