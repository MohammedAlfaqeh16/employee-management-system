@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Users & Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-primary"><i class="bi bi-people me-2"></i>Users Management</h2>

<table class="table table-hover table-bordered align-middle shadow-sm rounded-4">
    <thead class="table-primary">
        <tr>
            <th>#</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var user in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Roles" asp-action="AddRole" asp-route-userId="@user.Id" class="btn btn-outline-success btn-sm rounded-pill">
                            <i class="bi bi-plus-circle"></i> Add Role
                        </a>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>