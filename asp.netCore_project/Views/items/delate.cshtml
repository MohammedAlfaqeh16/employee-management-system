@model items

@{
    ViewData["Title"] = "Delete Item";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Item</h4>
                </div>
                <div class="card-body bg-light rounded-bottom-4">
                    <form asp-controller="items" asp-action="delate"   method="post" enctype="multipart/form-data" autocomplete="off">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                <input asp-for="Name" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">Price</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                <input asp-for="Price" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                            <select asp-for="CategoryId" class="form-select" disabled asp-items="@ViewBag.CategoryList"></select>
                        </div>
                        @* <div class="mb-3 text-center">
                            <label class="form-label fw-bold">Image</label>
                            <input  type="file" readonly class="form-control mb-2" value="@Model.imagePath" />
                            <img src="~/images/@Model.imagePath" height="120" class="img-thumbnail border border-danger" style="max-width: 200px;" alt="Item Image" />
                        </div> *@

                        @* مشاكل عند الحذف *@
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a href="@Url.Action("index", "items")" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}