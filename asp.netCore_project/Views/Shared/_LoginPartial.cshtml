@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-lg-2 align-items-center gap-2">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link d-flex align-items-center px-3 py-1 rounded-pill bg-light text-primary fw-semibold shadow-sm" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="bi bi-person-circle me-2"></i>
                <span class="d-none d-md-inline">Hello @UserManager.GetUserName(User)!</span>
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-outline-danger rounded-pill px-3 py-1 ms-2 shadow-sm d-flex align-items-center">
                    <i class="bi bi-box-arrow-right me-1"></i> <span class="d-none d-md-inline">Logout</span>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-outline-success rounded-pill px-3 py-1 fw-semibold shadow-sm d-flex align-items-center" id="register" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i> <span class="d-none d-md-inline">Register</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-outline-primary rounded-pill px-3 py-1 fw-semibold shadow-sm ms-2 d-flex align-items-center" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i> <span class="d-none d-md-inline">Login</span>
            </a>
        </li>
    }
</ul>